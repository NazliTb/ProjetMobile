<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Discover Airports"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="80px"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/image"
        android:layout_centerInParent="true"
        android:layout_below="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/plane"/>


    <SearchView
        android:id="@+id/search"
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/title2"
        android:layout_below="@id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Popular Airports"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="60px"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/beijing"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/beijing"/>

            <TextView
                android:id="@+id/airportname1"
                android:layout_below="@id/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Beijing Capital International Airport"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="40px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cdg"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/cdg"/>

            <TextView
                android:id="@+id/airportname2"
                android:layout_below="@id/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Paris-Charles de Gaulle (CDG) International Airport"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="40px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frankfurt"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/frankfurt"/>

            <TextView
                android:id="@+id/airportname3"
                android:layout_below="@id/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Frankfurt International Airport"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="40px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lax"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/lax"/>

            <TextView
                android:id="@+id/airportname4"
                android:layout_below="@id/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Los Angeles International Airport (LAX)"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="40px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sydney"
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/sydney"/>

            <TextView
                android:id="@+id/airportname5"
                android:layout_below="@id/beijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Sydney Kingsford Smith International Airport"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="40px"/>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>

