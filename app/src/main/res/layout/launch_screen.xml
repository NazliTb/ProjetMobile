<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmap"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Discover Airports"
                android:textColor="#000000"
                android:textSize="100px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_below="@id/image"
                    android:iconifiedByDefault="false"
                    android:queryHint="Search for airports " />

                <ImageButton
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_send" />

            </LinearLayout>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif"
                android:text="Popular Airports"
                android:textSize="60px"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title2"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/beijingAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/beijing"
                                android:layout_width="200dp"
                                android:layout_height="280dp"
                                android:src="@drawable/beijing" />

                            <TextView
                                android:id="@+id/airportname1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="sans-serif"
                                android:text="Beijing Capital International \nAirport"
                                android:textSize="40px" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cdgairport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cdg"
                                android:layout_width="200dp"
                                android:layout_height="280dp"
                                android:src="@drawable/pariscdg" />

                            <TextView
                                android:id="@+id/airportname2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="sans-serif"
                                android:text="Paris-Charles de Gaulle \n(CDG) International Airport"
                                android:textSize="40px" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dammamAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/dammam"
                                android:layout_width="200dp"
                                android:layout_height="280dp"
                                android:src="@drawable/damman" />

                            <TextView
                                android:id="@+id/airportname3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="sans-serif"
                                android:text="King Fahd International \nAirport Dammam"
                                android:textSize="40px" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/istanbulAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/istanbul"
                                android:layout_width="200dp"
                                android:layout_height="280dp"
                                android:src="@drawable/istanbul" />

                            <TextView
                                android:id="@+id/airportname4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="sans-serif"
                                android:text="Istanbul International \nAirport (IST)"
                                android:textSize="40px" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/orlyairport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/orly"
                                android:layout_width="200dp"
                                android:layout_height="280dp"
                                android:src="@drawable/parisorly" />

                            <TextView
                                android:id="@+id/airportname5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:fontFamily="sans-serif"
                                android:text="Paris Orly International \nAirport (ORY)"
                                android:textSize="40px" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

